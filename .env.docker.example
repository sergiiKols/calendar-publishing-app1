# ========================================
# Calendar App - Docker Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# Command: cp .env.docker.example .env

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_USER=calendar_user
POSTGRES_PASSWORD=CHANGE_ME_strong_password_123
POSTGRES_DB=calendar_db

# Database URLs (auto-generated from above, don't change unless needed)
# These are used internally by the app
POSTGRES_URL=postgresql://calendar_user:CHANGE_ME_strong_password_123@calendar-db:5432/calendar_db
POSTGRES_PRISMA_URL=postgresql://calendar_user:CHANGE_ME_strong_password_123@calendar-db:5432/calendar_db?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgresql://calendar_user:CHANGE_ME_strong_password_123@calendar-db:5432/calendar_db

# ========================================
# NEXTAUTH CONFIGURATION
# ========================================
# Your app URL (change to your domain in production)
NEXTAUTH_URL=http://localhost:3000
# Or for production with domain:
# NEXTAUTH_URL=https://calendar.yourdomain.com

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_32

# ========================================
# API KEYS & SECRETS
# ========================================
# API key for receiving articles from SMI project
CALENDAR_API_KEY=CHANGE_ME_random_api_key_here

# Secret for cron job authentication
CRON_SECRET=CHANGE_ME_random_cron_secret_here

# ========================================
# SOCIAL MEDIA & PUBLISHING PLATFORMS
# ========================================
# These are stored encrypted in database per platform
# You can configure them in the app UI after deployment

# WordPress (optional - configure in UI)
# WORDPRESS_URL=https://your-blog.com
# WORDPRESS_USERNAME=admin
# WORDPRESS_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Telegram (optional - configure in UI)
# TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
# TELEGRAM_CHAT_ID=@your_channel

# Facebook (optional - configure in UI)
# FACEBOOK_PAGE_ID=your-page-id
# FACEBOOK_ACCESS_TOKEN=your-long-lived-access-token

# Instagram (optional - configure in UI)
# INSTAGRAM_ACCOUNT_ID=your-instagram-business-account-id
# INSTAGRAM_ACCESS_TOKEN=your-long-lived-access-token

# LinkedIn (optional - configure in UI)
# LINKEDIN_ACCESS_TOKEN=your-access-token
# LINKEDIN_ORGANIZATION_ID=your-organization-id

# ========================================
# DATAFORSEO API CONFIGURATION
# ========================================
# DataForSEO credentials for SEO keywords analysis
# Get your credentials at: https://app.dataforseo.com/
DATAFORSEO_LOGIN=your_dataforseo_login
DATAFORSEO_PASSWORD=your_dataforseo_password
DATAFORSEO_API_URL=https://api.dataforseo.com/v3

# ========================================
# ADVANCED SETTINGS (optional)
# ========================================
# Node environment
NODE_ENV=production

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Encryption key for storing tokens (auto-generated if not set)
# ENCRYPTION_KEY=your-32-character-encryption-key
